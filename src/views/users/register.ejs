<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %> 
<body>
    <%- include("../partials/header") %> 
    <main>
        <section>
            <form action="" method="post">
                <div>
                    <label for="name">Nombre</label>
                    <input type="text" id="name" name="name">
                    <small style="color:red"><%= locals.errors && locals.errors.name ? locals.errors.name.msg : null %></small>
                </div>
                <div>
                    <label for="surname">Apellido</label>
                    <input type="text" id="surname" name="surname">
                    <small style="color:red"><%= locals.errors && locals.errors.surname ? locals.errors.surname.msg : null %></small>
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                    <small style="color:red"><%= locals.errors && locals.errors.email ? locals.errors.email.msg : null %></small>
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password">
                    <small style="color:red"><%= locals.errors && locals.errors.password ? locals.errors.password.msg : null %></small>
                </div>
                <div>
                    <label for="password2">Confirmar Contraseña</label>
                    <input type="password" id="password2" name="password2">
                    <small style="color:red"><%= locals.errors && locals.errors.password2 ? locals.errors.password2.msg : null %></small>
                </div>
                <div>
                    <button type="submit">Registrarse</button>
                </div>
            </form>
        </section>        
        </main>

    <%- include("../partials/footer") %> 
</body>
</html>